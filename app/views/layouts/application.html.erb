<!DOCTYPE html>
<html>
  <head>
    <title>Rapigas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <script src="//maps.google.com/maps/api/js?key=AIzaSyC9aHvPfx3Caek_ThL1dWQc_Tut0DiewaY"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  </head>

  <body>
  	<%= notice %>
  	<%= alert %>

  	<%= link_to "Ingresar", new_client_session_path %>
  	<%= link_to "Registrar", new_client_registration_path %>
  	<%= link_to "Salir", destroy_client_session_path, method: :delete %>
    <% if user_signed_in? %>
    <%= link_to current_client.actual_request, class: "btn btn-primary" %>
    <% end %>
    <%= yield %>
  </body>
</html>
